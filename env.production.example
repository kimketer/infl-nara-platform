# Inflnara Platform Production Environment Variables
# Copy this file to .env.production and fill in actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=inflnara
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${DATABASE_USERNAME}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_here_minimum_32_characters
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://inflnara.com
API_URL=https://api.inflnara.com
CORS_ORIGIN=https://inflnara.com,https://www.inflnara.com

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

# Linkprice API
LINKPRICE_API_KEY=your_linkprice_api_key_here
LINKPRICE_API_SECRET=your_linkprice_api_secret_here
LINKPRICE_BASE_URL=https://api.linkprice.com

# Bitly API (for deep links)
BITLY_API_KEY=your_bitly_api_key_here
BITLY_BASE_URL=https://api-ssl.bitly.com

# SendGrid (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@inflnara.com
SENDGRID_FROM_NAME=Inflnara Platform

# Slack (for notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_DEFAULT_CHANNEL=#inflnara-alerts

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=production

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Prometheus Metrics
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics

# =============================================================================
# FILE STORAGE
# =============================================================================

# AWS S3 (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=inflnara-uploads
AWS_S3_BUCKET_REGION=ap-northeast-2

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# =============================================================================
# EMAIL TEMPLATES
# =============================================================================
EMAIL_VERIFICATION_TEMPLATE_ID=your_sendgrid_template_id_here
PASSWORD_RESET_TEMPLATE_ID=your_sendgrid_template_id_here
CAMPAIGN_APPROVAL_TEMPLATE_ID=your_sendgrid_template_id_here
SETTLEMENT_COMPLETED_TEMPLATE_ID=your_sendgrid_template_id_here

# =============================================================================
# BUSINESS LOGIC CONFIGURATION
# =============================================================================

# Commission rates (in percentage)
DEFAULT_INFLUENCER_COMMISSION_RATE=70
DEFAULT_PLATFORM_COMMISSION_RATE=30
MIN_SETTLEMENT_AMOUNT=10000

# Campaign settings
MAX_CAMPAIGN_DURATION_DAYS=365
MIN_CAMPAIGN_BUDGET=100000
MAX_CAMPAIGN_BUDGET=100000000

# Performance tracking
PERFORMANCE_TRACKING_ENABLED=true
CLICK_TRACKING_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# =============================================================================
# SCHEDULED TASKS
# =============================================================================
SETTLEMENT_SCHEDULE_CRON=0 9 * * 1  # Every Monday at 9 AM
PERFORMANCE_SYNC_CRON=0 */6 * * *   # Every 6 hours
BACKUP_SCHEDULE_CRON=0 2 * * *      # Daily at 2 AM
CLEANUP_SCHEDULE_CRON=0 3 * * 0     # Weekly on Sunday at 3 AM

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
DOCKER_REGISTRY=your_docker_registry_here
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=inflnara-network

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_SSL_CERT_PATH=/etc/letsencrypt/live/inflnara.com/fullchain.pem
NGINX_SSL_KEY_PATH=/etc/letsencrypt/live/inflnara.com/privkey.pem
NGINX_DOMAIN=inflnara.com
NGINX_WWW_DOMAIN=www.inflnara.com

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/backup
BACKUP_RETENTION_DAYS=30
BACKUP_RETENTION_WEEKS=12
BACKUP_RETENTION_MONTHS=12

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG=false
LOG_LEVEL=info
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false

# =============================================================================
# FRONTEND SPECIFIC (Next.js)
# =============================================================================
NEXT_PUBLIC_API_BASE_URL=https://api.inflnara.com
NEXT_PUBLIC_APP_NAME=Inflnara
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@inflnara.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_SOCIAL_LOGIN=false
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_ANALYTICS_DASHBOARD=true
ENABLE_ADVANCED_REPORTING=true
ENABLE_AUTO_SETTLEMENT=true

# =============================================================================
# INTEGRATION TESTING
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/inflnara_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_JWT_SECRET=test_jwt_secret_key_for_testing_only

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=ap-northeast-2
DEPLOYMENT_VERSION=v1.0.0
ROLLBACK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health 